<div>
  <%= form_with model: [:admin, course, lesson] do |f| %>
      <%= f.label :name, 'Nome' %>
      <%= f.text_field :name %>
      
      <%= f.label :duration, 'Duração' %>
      <%= f.number_field :duration, step: 1, min: 0 %>

      <%= f.label :content, 'Conteúdo' %>
      <%= f.text_area :content %>

      <%= f.submit button_text %>
  <% end %>
</div>
