<section>
<header class="App-flex-column" style="justify-content: space-around; position: relative;">
<h2>Registrar</h2>
  <% if @user.errors.any? %>
    <div class="App-alert info App-flex-center" >
      <p>Foram encontrados <%= @user.errors.count %> erro(s):</p>
      <span class="App-btn-close-alert">&times;</span>
    </div> 
    
    <% @user.errors.full_messages.each do |error| %>
      <div class="App-alert warning App-flex-center">
        <p class=""><%= error %></p>
          <span class="App-btn-close-alert">&times;</span>
      </div> 
    <% end %>

  <% end %>
</header>

<div class="App-card App-div-form App-flex-center App-flex-column">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length ? "Mínimo #{@minimum_password_length} caracteres" : "Digite uma senha válida"}" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit') %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</section>