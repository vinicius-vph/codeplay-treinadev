<!-- Header -->
<div >
    <h1>Codeplay</h1>
    <% if @courses.empty? %>
        <h3 >Nenhum curso disponível</h3>     
    <% else %>
        <h3 >Cursos Disponíveis</h3>
    <% end %>
</div>
<div >
    <div>
        <%= link_to "Registrar um Curso", new_course_path, method: :get, style: "width:50%" %>
        <%= link_to "Voltar", root_path, method: :get, style: "width:50%" %>
    </div>


    <% @courses.each do |course| %>
        <table style="text-align:center;">
            <thead>
                <tr>
                    <h2><%= link_to course.name, course %></h2>
                </tr>
            </thead>
            <tr>
                <th>Descrição</th>
            </tr>
            <tr>
                <td><p><%= course.description %></p></td>
            </tr>
            <tr>
                <th>Preço</th>
            </tr>
            <tr>
                <td><p><%= number_to_currency course.price %></p></td>
            </tr>
        </table>
    <% end %>
</div>