<%= form_for @course do |f| %>
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name %>

    <%= f.label :description, 'Descrição' %>
    <%= f.text_field :description %>

    <%= f.label :code, 'Código' %>
    <%= f.text_field :code %>

    <%= f.label :price, 'Preço' %>
    <%= f.text_field :price %>

    <%= f.label :enrollment_deadline, 'Data limite de matrícula' %>
    <%= f.text_field :enrollment_deadline %>

    <%= @course.errors.messages %>

    <%= f.submit 'Criar curso' %>
<% end %>